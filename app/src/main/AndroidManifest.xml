<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add Internet permission for Firebase and Firestore connectivity -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthSafe"
        tools:targetApi="31">

        <!-- Add Firebase Analytics metadata (optional but recommended) -->
        <meta-data
            android:name="com.google.firebase.analytics.APPLICATION_ID"
            android:value="1:384716227669:android:2eb97eb146c422ff5c80dc" />

        <!-- Add Firebase App ID (optional, can be found in google-services.json) -->
        <meta-data
            android:name="com.google.firebase.APPLICATION_ID"
            android:value="1:384716227669:android:2eb97eb146c422ff5c80dc" />


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.HealthSafe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
